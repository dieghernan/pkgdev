citHeader("To cite the 'pkgdev' package in publications use:")

year = format(Sys.time(), "%Y")
vers = paste('R package version', meta$Version)
url = 'https://dieghernan.github.io/pkgdev/'

citEntry(
  entry = 'manual',
  title = paste('pkgdev:', meta$Title),
  author = "Diego Hernangómez",
  year = year,
  url = url,
  textVersion = paste0('Hernangómez, D (', year, '). pkgdev: ', meta$Title, '. ', url)
)
